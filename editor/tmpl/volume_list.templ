package tmpl

templ VolumeList(data ResponseData) {
    @page("LN.t Series Editor") {
        @navbar(data)
        <h1>{ data.Title }</h1>
        <div class="series-list">
            for index, series := range data.SubList {
                <div class={"flex", "my-1", evenodd(index)}>
                    <div class={"col-6", "h-5rem", "grid", "align-items-center"}>
                        <div>
                            <img src={ series.LocalImage } class="h-4rem img-fluid" alt={ series.Title } />
                        </div>
                        <div>
                            <a class="mx-2" href={ templ.URL("/"+data.Key+"/series/"+series.ID) }>{ series.Title }</a>
                            <br />
                            <span class={"mx-2", "lnt-tag", "lnt-tag-sm", "w-6rem", "text-white", "bg-"+series.Type }>
                                { series.Type }</span>
                        </div>
                    </div>
                    <div class={"col-6", "grid", "align-items-center"}>
                        <ul>
                            for _, volume := range series.Volumes {
                                <li>
                                    <a href={ templ.URL("/"+data.Key+"/series/"+series.ID+"/volumes/"+volume.ID) }>{ volume.Title }</a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            }
        </div>
    }
}